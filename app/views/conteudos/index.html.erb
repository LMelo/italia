<h1>Listing conteudos</h1>

<table class="table table-hover table-condensed">
  <tr>
    <th>Titulo</th>
    <th>Resumo</th>
    <th>Data publicacao</th>
    <th>Ativo</th>
    <th>Tipo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @conteudos.each do |conteudo| %>
  <tr>
    <td><%= conteudo.titulo %></td>
    <td><%= conteudo.resumo %></td>
    <td><%= conteudo.data_publicacao %></td>
    <td><%= conteudo.ativo %></td>
    <td><%= conteudo.tipo %></td>
    <td><%= link_to 'Show', conteudo, class: "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_conteudo_path(conteudo), class: "btn btn-default" %></td>
    <td><%= link_to 'Destroy', conteudo, method: :delete,
                    data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Conteudo', new_conteudo_path, class: "btn btn-primary" %>
