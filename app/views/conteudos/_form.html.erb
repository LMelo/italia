<%= simple_form_for(@conteudo, html: {class: "form-horizontal", multipart: true}) do |f| %>
  <%= f.error_notification %>

    <% @conteudo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>

  <div class="form-inputs">
    <%= f.input :titulo %>
    <%= f.input :data_publicacao %>
    <%= f.input :ativo %>
    <%= f.input :tipo, collection: helper_conteudo_tipo_colletion %>
    <%= f.input :resumo %>
    <%= f.input :descricao %>
    <%= f.file_field :foto %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
