      <div class="col-md-2 column">
        <a href="#"><img src="/assets/logout_black.png" height="48px" width="48px" alt="Sair" title="Sair"></a>
      </div>
    </div>
  </div>

  <div class="row clearfix">
    <div class="col-md-12 column">
      <%= yield %>
    </div>
  </div>
</div>

