<div class="col-md-4">
  <div class="thumbnail">
    <!--<img alt="300x200" src="http://lorempixel.com/600/200/people"/>-->

    <%= image_tag(noticia_thumbnail.foto.url(:thumb)) %>
    <div class="caption">
      <h3>
        <%= noticia_thumbnail.titulo %>
      </h3>

      <p>
        <%= noticia_thumbnail.resumo %>
      </p>

      <p>
        <%= noticia_thumbnail.data_publicacao %>
      </p>

      <p>
        <%= link_to "Leia mais >>", noticia_thumbnail, class: "btn btn-primary" %>
      </p>
    </div>
  </div>
</div>