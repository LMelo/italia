<h1>Listing noticias</h1>

<table class="table table-condensed">
  <thead>
      <tr>
        <th>Titulo</th>
        <th>Resumo</th>
        <th>Data publicacao</th>
        <th>Ativo</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>
  <tbody>
      <% @noticias.each do |noticia| %>
          <tr>
            <td><%= noticia.titulo %></td>
            <td><%= noticia.resumo %></td>
            <td><%= noticia.data_publicacao %></td>
            <td><%= noticia.ativo %></td>
            <td><%= link_to 'Show', noticia, class: "btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_noticia_path(noticia), class: "btn btn-default" %></td>
            <td><%= link_to 'Destroy', noticia, method: :delete, data: {confirm: 'Are you sure?'},
                            class: "btn btn-danger" %></td>
          </tr>
      <% end %>
  </tbody>

</table>

<br/>

<%= link_to 'New Noticia', new_noticia_path, class: "btn btn-primary" %>
