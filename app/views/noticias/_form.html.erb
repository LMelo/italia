<%= simple_form_for(@noticia) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titulo %>
    <%= f.input :resumo %>
    <%= f.input :data_publicacao %>
    <%= f.input :ativo %>
    <div class="control-group">
      <%= f.label :foto %>
      <div class="controls">
        <%= f.file_field :foto %>
      </div>
    </div>
    <%= f.input :conteudo, input_html: {:style => 'width: 1142px'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
