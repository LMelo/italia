<h1>Listing galerias</h1>

<%= link_to 'New Galeria', new_galeria_path, class: helper_app_btn_new %>
<br/>
<table class="table table-hover table-condensed">
  <thead>
      <tr>
        <th>Titulo</th>
        <th>Evento</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>
  <tbody>
      <% @galerias.each do |galeria| %>
          <tr>
            <td><%= galeria.titulo %></td>
            <td><%= helper_evento_name(galeria.evento_id) %></td>
            <td><%= link_to 'Show', galeria, class: helper_app_btn_show %></td>
            <td><%= link_to 'Edit', edit_galeria_path(galeria), class: helper_app_btn_edit %></td>
            <td><%= link_to 'Destroy', galeria, method: :delete, data: { confirm: 'Are you sure?' },
                            class: helper_app_btn_destroy %></td>
          </tr>
      <% end %>
  </tbody>
</table>


